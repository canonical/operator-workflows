{
  "name": "operator-workflows",
  "description": "Github workflows for charm developments",
  "version": "0.0.1",
  "author": "",
  "private": true,
  "homepage": "https://github.com/canonical/operator-workflows",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/canonical/operator-workflows.git"
  },
  "bugs": {
    "url": "https://github.com/canonical/operator-workflows/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ls src/*.ts | sed -E 's|.*/([^/]+)\\.ts|\\1|' | xargs -I{} npx ncc build src/{}.ts -o dist/{} --source-map",
    "test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/artifact": "6.2.0",
    "@actions/cache": "6.0.0",
    "@actions/core": "3.0.0",
    "@actions/exec": "3.0.0",
    "@actions/github": "9.0.0",
    "@actions/glob": "0.6.1",
    "js-yaml": "4.1.1"
  },
  "devDependencies": {
    "@github/local-action": "^7.0.0",
    "@jest/globals": "^30.0.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^10.0.0",
    "eslint-plugin-jest": "^29.0.0",
    "eslint-plugin-jsonc": "^3.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^30.0.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
